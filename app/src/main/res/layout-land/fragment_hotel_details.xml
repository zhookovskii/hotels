<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyan_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/hotel_card"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:contentDescription="@string/hotel_image_desc" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/grey_accent"
            android:fontFamily="@font/segoe"
            android:layout_marginBottom="4dp"
            android:text="@string/hotel_name_placeholder"/>

        <RatingBar
            android:id="@+id/hotel_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:theme="@style/ratingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:rating="3"
            style="?android:attr/ratingBarStyleIndicator"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/segoe"
                android:text="@string/hotel_address_placeholder"/>

            <TextView
                android:id="@+id/hotel_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/light_grey"
                android:textAlignment="center"
                android:fontFamily="@font/segoe"
                android:text="@string/hotel_distance_placeholder"/>

            <TextView
                android:id="@+id/hotel_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/light_grey"
                android:textAlignment="center"
                android:fontFamily="@font/segoe"
                android:text="@string/some_coordinates"/>

        </LinearLayout>

        <TextView
            android:id="@+id/available_suites_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/cyan"
            android:textSize="20sp"
            android:fontFamily="@font/segoe"
            android:text="@string/available_suites"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/first_suite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:width="50dp"
                android:background="@drawable/door"
                android:fontFamily="@font/segoe"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="@string/suite_single_digit"/>

            <TextView
                android:id="@+id/second_suite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/door"
                android:height="50dp"
                android:width="50dp"
                android:fontFamily="@font/segoe"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textAlignment="center"
                android:text="@string/suite_double_digit"/>

            <TextView
                android:id="@+id/third_suite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/door"
                android:height="50dp"
                android:width="50dp"
                android:fontFamily="@font/segoe"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textAlignment="center"
                android:text="@string/suite_triple_digit"/>

            <TextView
                android:id="@+id/more_suits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/segoe"
                android:textAlignment="center"
                android:textColor="@color/cyan"
                android:textSize="18sp"
                android:text="@string/and_some_more"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>